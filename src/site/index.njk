  <div id="listContainer" class="content pr-32 md:pr-56 text-left mb-4 mt-4">
  {%- for post in collections.mainPages -%}
  <div class="boxContainer">
    {%- if post.data.format === "book" -%}
    <div class="boxHeader bookIcon">
      <i class="typeIcon fas fa-book text-secondary ml-2 opacity-100"></i>
    </div>
    {%- else -%}
    <div class="boxHeader videoIcon">
      <i class="typeIcon fas fa-film text-secondary ml-2 opacity-100"></i>
    </div>
    {%- endif -%}
    <div onclick="contentCollapse(event)" id="letter-{{ post.data.category }}" class="entryContainer flex items-start justify-between glowbox cursor-pointer">
      <div class="entryContent flex flex-col">
      <div class="authorContainer items-center cursor-pointer">
        <b class="authorName">{{ post.data.author }}&nbsp</b>- {{ post.data.title }}
      </div>
      <div class="contentContainer text-baby shortText invisible opacity-0">{{ post.templateContent | safe }}</div>
      </div>
      <div class="iconContainer z-0 flex">
    <i onclick="contentRotate(event)" class="fas fa-caret-down text-tangerine ml-4 opacity-75"></i>
    </div>
    </div>
  </div>
  {%- endfor -%}
  </div>
</div>
